.detail-container(ng-show="detail_context=='add_location'")  
  .detail-select-container 
    | [{location.types == undefined ? "Source Type" : location.types}]
    select(ng-model="location.types", ng-options="item.name as item.name for item in source_types")

  //-.detail-input-container
    input(type="text", placeholder="Title...", ng-model="current_review.title")    
  
  .detail-textarea-container.location
    textarea(ng-model="location.description")

  .detail-select-container 
    | [{location.access == undefined ? "Access" : location_access_types[location.access]}]
    select(ng-model="location.access", ng-options="i as access for (i,access) in location_access_types")

  .detail-toggle-container
    .detail-toggle-label Unverified
    .ng-switcher(toggle="location.unverified")


  //-SEASONALITY

  .detail-btn-dark.btn-save(ng-click="save_review()") Save