.detail-container(ng-show="detail_context=='add_location'")  
  .detail-select-container 
    | [{location.type_ids == undefined ? "Source type" : source_types_by_id[location.type_ids[0]].name}]
    select(ng-model="location.type_ids[0]", ng-options="type.id as type.name for type in source_types")

  //.detail-input-container
  //  input(type="text", placeholder="?", ng-model="location.lat")

  //.detail-input-container
  //  input(type="text", placeholder="?", ng-model="location.lng")                
  
  .detail-textarea-container.location
    textarea(placeholder="Description...", ng-model="location.description")

  .detail-select-container 
    | [{location.access == undefined ? "Access" : short_access_types[location.access]}]
    select(ng-model="location.access", ng-options="i as access for (i,access) in short_access_types")

  .detail-toggle-container
    .detail-toggle-label Unverified
    .ng-switcher(toggle="location.unverified")

  //-OBSERVATION

  .detail-slider-container
    .detail-slider-text
      [{location.observation.quality_rating == undefined ? "Quality" : ratings[location.observation.quality_rating]}]
    slider(floor="0" ceiling="4" step="1" precision="0" ng-model="location.observation.quality_rating")
    
  .detail-slider-container
    .detail-slider-text
      [{location.observation.yield_rating == undefined ? "Yield" : ratings[location.observation.yield_rating]}]
    slider(floor="0" ceiling="4" step="1" precision="0" ng-model="location.observation.yield_rating") 

  .detail-slider-container
    .detail-slider-text
      [{location.observation.fruiting == undefined ? "Fruiting" : fruiting_status[location.observation.fruiting]}]
    slider(floor="0" ceiling="3" step="1" precision="0" ng-model="location.observation.fruiting") 

  .detail-btn-dark.btn-save(ng-click="save_location()") Save
