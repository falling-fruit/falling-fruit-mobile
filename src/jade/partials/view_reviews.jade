.detail-container(ng-show="detail_context=='view_reviews'")
  .review-list-container
    a.list-item(ng-repeat="r in reviews", ng-click="add_review(r.id)")
      .list-item-image(ng-style="r.style")

      .list-item-info-container
        .list-item-author 
          span by 
          | [{::r.author}]
        .list-item-name [{::r.created_at | date : 'MMM dd, yyyy h:mm a'}]
        .list-item-description [{::r.comment}]

    .detail-btn-dark.review(ng-click="add_review()") Add a review
