.detail-container(ng-show="detail_context=='view_location'")

  .photo-list-container
    ul.photo-list
      li(ng-repeat="photo in location.photos")

  .location-info
    .location-types
      span(ng-repeat="id in location.type_ids")
        [{source_types_by_id[id].name}][{$last ? '' : ', '}]
    div Lat, Lng: [{location.lat}], [{location.lng}]
    div(ng-show="location.map_distance") Distance (map): [{location.map_distance}]
    div(ng-show="location.current_distance") Distance (me): [{location.current_distance}]
    div(ng-show="location.season_string") Season: [{location.season_string}]
    div Added: [{location.created_at | date : 'MMMM d, yyyy'}]
    div Updated: [{location.updated_at | date : 'MMMM d, yyyy'}]
    div(ng-show="location.access != null") Access: [{location.access_string}]
    div Unverified: [{location.unverified}]

  .location-description [{location.description}]
  
  .location-author added by [{location.author}]

  //-a.btn-location-reviews(ng-click="show_reviews()", ng-show="location.num_reviews > 0") Read reviews ([{location.num_reviews}])
  .detail-btn-container
    .detail-btn-dark(ng-click="detail_context='add_location'; menu_title='Edit';") Edit
    .detail-btn-dark(ng-click="add_review()") Review
  .detail-btn-container
    .detail-btn-dark(ng-click="show_reviews()", ng-show="location.num_reviews > 0") Read reviews ([{location.num_reviews}])
