.detail-container(ng-show="detail_context=='add_review'")
  
  form(name="AddReviewForm", novalidate)
  
    .detail-textarea-container
      textarea(ng-model="location.observation.comment", translate-attr="{placeholder: 'glossary.comment'}")
    
    include repeated_review_fields
    
    .detail-btn.orange(ng-click="save_review()", ng-disabled="is_empty(location.observation)", translate="glossary.save")
